<Context distributable="true">

	<WatchedResource>WEB-INF/web.xml</WatchedResource>
	
	<!-- 图片文件根目录 -->
	<Environment name="imageBasePath" type="java.lang.String" value="res/images"/>
	<!-- 图片服务器根路径 -->
	<Environment name="imageBaseUrl" type="java.lang.String" value="/image"/>

	<Resource name="jdbc/dataSource"
		factory="org.apache.naming.factory.BeanFactory"
		driverClass="com.mysql.jdbc.Driver"
		type="com.jolbox.bonecp.BoneCPDataSource"
		jdbcUrl="jdbc:mysql://localhost:3306/logreplay?useUnicode=true&amp;characterEncoding=UTF-8" 
		username="mobile"
		password="mobile"
		idleConnectionTestPeriodInMinutes="60" 
		idleMaxAgeInMinutes="240"
		maxConnectionsPerPartition="3" 
		minConnectionsPerPartition="1"
		partitionCount="1"
        acquireIncrement="5"
        statementsCacheSize="100"
		defaultAutoCommit="true"
	/>
	
</Context>